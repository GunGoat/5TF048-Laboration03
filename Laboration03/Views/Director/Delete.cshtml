@model Director
@{
    ViewData["Title"] = "Delete Director";
}

<div class="card shadow border">
    <div class="card-header bg-danger bg-gradient ml-0 py-4">
        <div class="col-12 text-center">
            <h2 class="card-title text-white">Delete Director</h2>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Delete" enctype="multipart/form-data">
            <input asp-for="DirectorID" hidden />

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" type="date" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Nationality" class="control-label"></label>
                <input asp-for="Nationality" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Biography" class="control-label"></label>
                <textarea asp-for="Biography" class="form-control" readonly></textarea>
            </div>

            <div class="col-12">
                <button type="submit" class="w-100 btn btn-lg btn-outline-danger">Delete</button>
                <a asp-action="Index" class="w-100 btn btn-lg btn-secondary mt-2">Cancel</a>
            </div>
        </form>
    </div>
</div>
