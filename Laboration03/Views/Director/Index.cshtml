@model IEnumerable<Director>

<h2>Directors</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Director ID</th>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Nationality</th>
            <th>Biography</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var director in Model)
        {
            <tr>
                <td>@director.DirectorID</td>
                <td>@director.Name</td>
                <td>@(director.DateOfBirth.HasValue ? director.DateOfBirth.Value.ToString("yyyy-MM-dd") : "N/A")</td>
                <td>@director.Nationality</td>
                <td>@director.Biography</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Update" asp-controller="Director" asp-route-id="@director.DirectorID" class="btn btn-sm btn-warning">Update</a>
                        <a asp-action="Delete" asp-controller="Director" asp-route-id="@director.DirectorID" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" asp-controller="Director" class="btn btn-success">Add New Director</a>
