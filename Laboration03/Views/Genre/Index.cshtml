@model IEnumerable<Genre>

<h2>Genres</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Genre ID</th>
            <th>Genre Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var genre in Model)
        {
            <tr>
                <td>@genre.GenreID</td>
                <td>@genre.GenreName</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Update" asp-controller="Genre" asp-route-id="@genre.GenreID" class="btn btn-sm btn-warning">Update</a>
                        <a asp-action="Delete" asp-controller="Genre" asp-route-id="@genre.GenreID" class="btn btn-sm btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" asp-controller="Genre" class="btn btn-success">Add New Genre</a>
