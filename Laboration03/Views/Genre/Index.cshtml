@model IEnumerable<Laboration03.Domain.Entities.Genre>

@{
    ViewData["Title"] = "Genre Index";
}

<div class="container mt-4">
    <h2>Genres</h2>

    <!-- Genre Table -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Genre ID</th>
                <th>Genre Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var genre in Model)
            {
                <tr>
                    <td>@genre.GenreID</td>
                    <td>@genre.GenreName</td>
                    <td>
                        <div class="btn-group" role="group">
                            <!-- Update Button -->
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#updateGenreModal"
                                    data-id="@genre.GenreID" data-name="@genre.GenreName">
                                Update
                            </button>

                            <!-- Delete Button -->
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteGenreModal"
                                    data-id="@genre.GenreID">
                                Delete
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Create Button -->
    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#createGenreModal">
        Create New Genre
    </button>
</div>

<!-- Modals -->
<!-- Create Genre Modal -->
<div class="modal fade" id="createGenreModal" tabindex="-1" aria-labelledby="createGenreLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createGenreLabel">Create Genre</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label for="GenreName" class="form-label">Genre Name</label>
                        @* <input type="text" class="form-control" id="GenreName" name="GenreName" asp-for="GenreName" required /> *@
                        @* <span asp-validation-for="GenreName" class="text-danger"></span> *@
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Update Genre Modal -->
<div class="modal fade" id="updateGenreModal" tabindex="-1" aria-labelledby="updateGenreLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateGenreLabel">Update Genre</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Update" method="post">
                    <input type="hidden" id="updateGenreId" name="GenreID" />
                    <div class="mb-3">
                        <label for="updateGenreName" class="form-label">Genre Name</label>
                        <input type="text" class="form-control" id="updateGenreName" name="GenreName" required />
                        @* <span asp-validation-for="GenreName" class="text-danger"></span> *@
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Genre Modal -->
<div class="modal fade" id="deleteGenreModal" tabindex="-1" aria-labelledby="deleteGenreLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteGenreLabel">Delete Genre</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this genre?</p>
                <form asp-action="Delete" method="post">
                    <input type="hidden" id="deleteGenreId" name="id" />
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Pass data to the update modal
        $('#updateGenreModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var genreId = button.data('id');
            var genreName = button.data('name');

            var modal = $(this);
            modal.find('#updateGenreId').val(genreId);
            modal.find('#updateGenreName').val(genreName);
        });

        // Pass data to the delete modal
        $('#deleteGenreModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var genreId = button.data('id');

            var modal = $(this);
            modal.find('#deleteGenreId').val(genreId);
        });
    </script>
}
